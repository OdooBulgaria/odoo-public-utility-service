<openerp>
    <data>

	<record model="ir.ui.view" id="analytic_account_inherited_utlity_form">
	    <field name="name">account.analytic.account.utility.form.inherit</field>
	    <field name="model">account.analytic.account</field>
            <field name="inherit_id" ref="project.analytic_account_inherited_form"/>
            <field eval="19" name="priority"/>
	    <field name="arch" type="xml">
		<xpath expr='//div[@name="project"]' position='inside'>
		    <field name="use_utilities"/>
		    <label for="use_utilities"/>
		</xpath>
		<notebook position="inside">
			<page string="Utilities" attrs="{'invisible':[('use_utilities','=',False)]}">
                <group>
				    <field name="address_utilities_id"/>
				    <field name="day_of_month_invoice"/>
                    <fiald name="invoice_address"/>
                </group>
                <label for="utility_line_ids"/>
				<field name="utility_line_ids">
                    <tree editable="top">
                        <field name='product_id'/>
                        <field name='date_begin'/>
                        <field name='date_end'/>
                    </tree>
                </field>
			</page>
		</notebook>
	    </field>
	</record>

    </data>
</openerp>
